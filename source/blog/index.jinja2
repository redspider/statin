{% extends '_base.jinja2' %}
{% block content %}
    <div class="row">
        <div class="span12">

            <h3>All blog entries</h3>

            {% for article in glob('blog/2*') %}
                <article>
                    <header>
                        <h4>
                            <a href="{{ map(article) }}">{{ select(grab(article).as_html(),'h1').text() }}</a>
                        </h4>
                    </header>
                    <p>
                        {{ select(grab(article).as_html(),'h1 + p').text() }}
                    </p>
                </article>

            {% endfor %}
        </div>
    </div>
{% endblock %}
